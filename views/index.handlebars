<header>
    <h1>Bob's Burgers</h1>
    <img src="../public/assets/img/macfriends80.jpg" alt="MacD">
</header>


<div id="Uneaten">

<h2>UnEaten</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <p>{{burger_name}}</p>
        <button class="devour" data-id="{{id}}" data-newdevour="{{devoured}}">Devour It!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

</div>

<div id="Eaten">

<h2>Eaten</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
        <li>
        <p>{{burger_name}}</p>
        </li>
        {{/if}}
    {{/each}}
</ul>

</div>

<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <input type="text" id="new_burger" name="name">
    </div>

    <button type="submit">Add Burger</button>
</form>

<script>

    $(function(){

    $('.create-form').on('submit', function(event){
        event.preventDefault();
        console.log("Button is working");
        var newBurger = {
                burger_name: $('#new_burger').val().trim()
        };

        console.log(newBurger.burger_name);

        $.ajax('/api/burgers',{
            type: 'POST',
            data: newBurger
        }).then(function(){
            console.log('new burger created');
            location.reload();
        });

    });

    $('.devour').on('click', function(event){
        event.preventDefault();
        console.log("NOM NOM NOM NOM");

        var id = $(this).data('id');
        var newDevour = $(this).data('newdevour');

        var newDevourState = {
            devoured: newDevour
        }

        console.log(id);

        $.ajax("/api/burgers/" + id, {
            type: "PUT",
            data: newDevourState
        }).then(function(){
            console.log("burger has been eaten");
            location.reload();
        });

    });

    });


</script>